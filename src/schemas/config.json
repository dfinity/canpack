{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "rust": {
      "type": "object",
      "properties": {
        "canister": { "type": "string" },
        "parts": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "path": {
                  "type": "string"
                },
                "package": {
                  "type": "string"
                }
              },
              "required": ["package"]
            }
          ]
        }
      },
      "required": ["parts"]
    }
  },
  "required": ["rust"]
}
